<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

        <!-- Стиль для ActionBar -->
        <style name="ActionBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
            <item name="android:textColorPrimary">@color/white</item> <!-- Цвет текста -->
            <item name="android:background">@color/primary_color</item> <!-- Фон ActionBar -->
            <item name="android:popupTheme">@style/PopupOverlay</item> <!-- Темы всплывающего меню -->
        </style>

        <style name="PopupOverlay" parent="ThemeOverlay.AppCompat">
            <item name="android:textColor">@color/on_surface_color</item> <!-- Цвет текста в меню -->
            <item name="android:popupBackground">@color/white</item>
        </style>

    <style name="MyStyle" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:popupBackground">@color/blue</item>
    </style>
</resources>
